<%- include("../partials/head") %>
<%- include("../partials/navbar") %>
<main class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="my-4 h3">Publier une article</h1>
            <form action="/blog/publier" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-lg-4">
                      <label for="titre">Titre</label>
                      <input type="text" class="form-control" id="titre" name="title">
                    </div>
                    <div class="form-group col-lg-4">
                      <label for="categorie">Categories</label>
                      <select id="categorie" name="category" class="form-control">
                      <% categories.map((categorie,index)=>{%>
                        <option value="<%= categorie._id %>"><%= categorie.title %></option>
                      <%  }) %>
                    </select>
                    </div>
                    <div class="form-group col-lg-4">
                      <label for="titre">Image :</label>
                      <input type="file" class="form-control-file" name="image" />
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="content">Contenu</label>
                        <textarea class="form-control" id="content" rows="3" name="content"></textarea>                    
                    </div>
                  </div>
                <button class="btn btn-primary" type="submit">Publier</button>
              </div>
                  
                  
                  
            </form>
        </div>
    </div>
</main>
<%- include("../partials/footer") %>